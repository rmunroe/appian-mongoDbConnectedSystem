<appian-plugin name="MongoDB Connected System" key="com.appiancorp.solutionsconsulting.cs.mongodb">

    <plugin-info>
        <description>My Corp Connected System - Hello World</description>
        <vendor name="Appian Solutions Consulting" url="http://www.appian.com"/>
        <version>1.0.0.0</version>
        <application-version min="19.4.0.0"/>
    </plugin-info>

    <connected-system-template key="MongoDbConnectedSystem" name="MongoDbConnectedSystem"
                               class="com.appiancorp.solutionsconsulting.cs.mongodb.MongoDbConnectedSystemTemplate">

        <integration-template key="ListDatabasesIntegrationTemplate" name="ListDatabasesIntegrationTemplate"
                              class="com.appiancorp.solutionsconsulting.cs.mongodb.integrations.ListDatabasesIntegrationTemplate"/>

        <integration-template key="ListCollectionsIntegrationTemplate" name="ListCollectionsIntegrationTemplate"
                              class="com.appiancorp.solutionsconsulting.cs.mongodb.integrations.ListCollectionsIntegrationTemplate"/>

        <integration-template key="CollectionFindIntegrationTemplate" name="CollectionFindIntegrationTemplate"
                              class="com.appiancorp.solutionsconsulting.cs.mongodb.integrations.CollectionFindIntegrationTemplate"/>

        <integration-template key="ExportCollectionFindIntegrationTemplate" name="ExportCollectionFindIntegrationTemplate"
                              class="com.appiancorp.solutionsconsulting.cs.mongodb.integrations.ExportCollectionFindIntegrationTemplate"/>

        <integration-template key="CollectionCountIntegrationTemplate" name="CollectionCountIntegrationTemplate"
                              class="com.appiancorp.solutionsconsulting.cs.mongodb.integrations.CollectionCountIntegrationTemplate"/>

        <integration-template key="CollectionAggregateIntegrationTemplate" name="CollectionAggregateIntegrationTemplate"
                              class="com.appiancorp.solutionsconsulting.cs.mongodb.integrations.CollectionAggregateIntegrationTemplate"/>

        <integration-template key="ExportCollectionAggregateIntegrationTemplate" name="ExportCollectionAggregateIntegrationTemplate"
                              class="com.appiancorp.solutionsconsulting.cs.mongodb.integrations.ExportCollectionAggregateIntegrationTemplate"/>

    </connected-system-template>
</appian-plugin>
