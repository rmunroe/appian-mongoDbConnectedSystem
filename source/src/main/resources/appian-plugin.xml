<appian-plugin name="MongoDB Connected System" key="com.appiancorp.solutionsconsulting.cs.mongodb">

    <plugin-info>
        <description>MongoDB Connected System for Appian</description>
        <vendor name="Appian Solutions Consulting" url="http://www.appian.com"/>
        <version>1.0.0.0</version>
        <application-version min="19.4.0.0"/>
    </plugin-info>

    <connected-system-template key="MongoDbConnectedSystem" name="MongoDbConnectedSystem"
                               class="com.appiancorp.solutionsconsulting.cs.mongodb.MongoDbConnectedSystemTemplate">

        <integration-template key="ListDatabasesIntegrationTemplate" name="ListDatabasesIntegrationTemplate"
                              class="com.appiancorp.solutionsconsulting.cs.mongodb.integrations.ListDatabasesIntegrationTemplate"/>

        <integration-template key="ListCollectionsIntegrationTemplate" name="ListCollectionsIntegrationTemplate"
                              class="com.appiancorp.solutionsconsulting.cs.mongodb.integrations.ListCollectionsIntegrationTemplate"/>

        <integration-template key="ReadCollectionFindIntegrationTemplate" name="ReadCollectionFindIntegrationTemplate"
                              class="com.appiancorp.solutionsconsulting.cs.mongodb.integrations.ReadCollectionFindIntegrationTemplate"/>

        <integration-template key="WriteCollectionFindIntegrationTemplate" name="WriteCollectionFindIntegrationTemplate"
                              class="com.appiancorp.solutionsconsulting.cs.mongodb.integrations.WriteCollectionFindIntegrationTemplate"/>

        <integration-template key="CollectionCountIntegrationTemplate" name="CollectionCountIntegrationTemplate"
                              class="com.appiancorp.solutionsconsulting.cs.mongodb.integrations.CollectionCountIntegrationTemplate"/>

        <integration-template key="ReadCollectionAggregateIntegrationTemplate"
                              name="ReadCollectionAggregateIntegrationTemplate"
                              class="com.appiancorp.solutionsconsulting.cs.mongodb.integrations.ReadCollectionAggregateIntegrationTemplate"/>

        <integration-template key="WriteCollectionAggregateIntegrationTemplate"
                              name="WriteCollectionAggregateIntegrationTemplate"
                              class="com.appiancorp.solutionsconsulting.cs.mongodb.integrations.WriteCollectionAggregateIntegrationTemplate"/>

        <integration-template key="InsertManyIntegrationTemplate" name="InsertManyIntegrationTemplate"
                              class="com.appiancorp.solutionsconsulting.cs.mongodb.integrations.InsertManyIntegrationTemplate"/>

        <integration-template key="InsertOneIntegrationTemplate" name="InsertOneIntegrationTemplate"
                              class="com.appiancorp.solutionsconsulting.cs.mongodb.integrations.InsertOneIntegrationTemplate"/>

        <integration-template key="UpdateManyIntegrationTemplate" name="UpdateManyIntegrationTemplate"
                              class="com.appiancorp.solutionsconsulting.cs.mongodb.integrations.UpdateManyIntegrationTemplate"/>

        <integration-template key="UpdateOneIntegrationTemplate" name="UpdateOneIntegrationTemplate"
                              class="com.appiancorp.solutionsconsulting.cs.mongodb.integrations.UpdateOneIntegrationTemplate"/>

    </connected-system-template>
</appian-plugin>
